@{
    ViewBag.Title = "MapaEmpresas";
    Layout = "~/Views/Layout/_Principal.cshtml";
    ViewBag.ActiveMenu = "mapaempresas";
    ViewBag.ActiveMenuRoot = "empresas";
}
@section script{
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable({
                ajax: {
                    url: "http://serv-55.laaraucana.local:8080/api/Empresa",
                    dataSrc: ''
                },
                aaSorting: [],
                order: [],
                columns: [
                    { data: "Id" },
                    {data: "Dv"},
                    {
                        
                        data: "NombreEmpresa",
                        fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                            $(nTd).html("<a href='/Reportal/Empresas/DetalleMapaEmpresa/" + oData.Id + "/'>" + oData.NombreEmpresa + "</a>");
                        }
                    },
                    { data: "HoldingEmpresa" },
                    //{ data: "SectorEcoEmpresa" },
                    { data: "TipoEntidadEmpresa" },
                    { data: "ClasificacionRiegoEmpresa" },
                    { data: "ClasificacionComercial" },
                ],
            });
        });
    </script>
}
@section css{
    <link href="~/assets/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
}
<div class="container">
    <!-- Page-Title -->
    <div class="row">
       
        <div class="col-sm-12">
            <h4 class="page-title">Listado de Empresa</h4>
            <ol class="breadcrumb">
                <li><a href="#">Portal de Información</a></li>
                <li><a href="#">Mapa Empresa</a></li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Rut</th>
                            <th>Dv</th>
                            <th>Nombre Empresa</th>
                            <th>Holding Empresa</th>
                           @* <th>Sector</th>*@
                            <th>Tipo Entidad Empresa</th>
                            <th>Clasificación de Riesgo</th>
                            <th>Clasificación Comercial</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div> <!-- container -->