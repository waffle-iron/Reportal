
@{
    ViewBag.Title = "Campañas - Contactabilidad";
    Layout = "~/Views/Layout/_Principal.cshtml";
    ViewBag.ActiveMenu = "contactabilidad";
    ViewBag.ActiveMenuRoot = "campañas";

}

@section css {

    <link href="~/assets/plugins/nvd3/build/nv.d3.min.css" rel="stylesheet" type="text/css" />

}

@section script{


    <script src="~/assets/plugins/peity/jquery.peity.min.js"></script>
    <script src="~/assets/plugins/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="~/assets/plugins/jquery-knob/jquery.knob.js"></script>


    <script src="~/assets/plugins/d3/d3.min.js"></script>
    <script src="~/assets/plugins/nvd3/build/nv.d3.min.js"></script>
    <script src="~/assets/pages/jquery.nvd3.init.js"></script>



    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

            <!-- Chart JS -->
    <script src="~/assets/plugins/Chart.js/Chart.min.js"></script>


    <script src="~/assets/js.app/campanias.js"></script>

}

<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Contactabilidad de Afiliados (Actualizado el <label id="fechaActualizacion"></label>)</h4>
            <ol class="breadcrumb">
                <li><a href="#">Portal de Informacion</a></li>
                <li><a href="#">Campañas</a></li>
                <li class="active">Contactabilidad de Afiliados</li>
            </ol>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-4">
            <div class="widget-bg-color-icon card-box fadeInDown animated">
                <div class="bg-icon bg-icon-info pull-left">
                    <i class="md md-perm-identity text-info"></i>
                </div>
                <div class="text-right">
                    <h3 class="text-dark"><b class="counter" id="totalAfiliados">1.200.000</b>
                    </h3>
                    <p class="text-muted">Total de Afiliados</p>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="card-box">
                <h4 class="text-dark header-title m-t-0 m-b-30">Afiliados Contactables</h4>
                <div class="widget-chart text-center">
                    <input class="knob" data-width="150" data-height="150" data-linecap=round data-fgColor="#fb6d9d" value="80" data-skin="tron" data-angleOffset="180" data-readOnly=true data-thickness=".15"/>
                    <h5 class="text-muted m-t-20"> <i class="md md-contacts text-pink"></i> Total de Afiliados Contactables</h5>
                    <h2 class="font-600" id="AfiliadosContactables">800.000</h2>
                </div>
            </div>
        </div>


        <div class="col-lg-8">
            <div class="card-box">
                <h4 class="m-t-10 header-title"><b>Tendencia</b></h4>
                
                <ul class="list-inline chart-detail-list text-center">
                    <li><h5><i class="fa fa-circle m-r-5" style="color: #0000ff"></i>Porcentaje de afiliados contactables en los ultimos 10 meses</h5></li>
                </ul>
                <canvas id="bar" height="351"></canvas>
            </div>
        </div>

        


    </div>

    <div class="row">

        <div class="col-md-6 col-lg-4">
            <div class="widget-bg-color-icon card-box fadeInDown animated">
                <div class="bg-icon bg-icon-info pull-left">
                    <i class="md md-email text-info"></i>
                </div>
                <div class="text-right">
                    <h3 class="text-dark"><b class="counter" id="TotalAfiliadosCorreo">31,570</b></h3>
                    <p class="text-muted">Correo</p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="widget-bg-color-icon card-box">
                <div class="bg-icon bg-icon-pink pull-left">
                    <i class="md md-stay-current-portrait text-pink"></i>
                </div>
                <div class="text-right">
                    <h3 class="text-dark"><b class="counter" id="TotalAfiliadosSMS">280</b></h3>
                    <p class="text-muted">Celular</p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="widget-bg-color-icon card-box">
                <div class="bg-icon bg-icon-success pull-left">
                    <i class="md md-phone text-success"></i>
                </div>
                <div class="text-right">
                    <h3 class="text-dark"><b class="counter" id="TotalAfiliadosCall">64,570</b></h3>
                    <p class="text-muted">Teléfono y Celular</p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-lg-4">
            <div class="card-box">
                <h4 class="text-dark header-title m-t-0 m-b-30">Correo Electronico</h4>

                <div class="widget-chart text-center">
                    <div id="grafCorreos">
                        <svg style="height: 350px; width: 100%;"></svg>
                    </div>

                    <ul class="list-inline m-t-15">
                        <li>
                            <h5 class="text-muted m-t-20">Trabajadores</h5>
                            <h4 class="m-b-0" id="AfiliadosCorreoTrabajadores">1000</h4>
                        </li>
                        <li></li>
                        <li>
                            <h5 class="text-muted m-t-20">Pensionados</h5>
                            <h4 class="m-b-0" id="AfiliadosCorreoPensionados">965</h4>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card-box">
                <h4 class="text-dark header-title m-t-0 m-b-30">Celular</h4>

                <div class="widget-chart text-center">
                   
                    <div id="grafSMS">
                        <svg style="height: 350px; width: 100%;"></svg>
                    </div>
                    <ul class="list-inline m-t-15">
                        <li>
                            <h5 class="text-muted m-t-20">Trabajadores</h5>
                            <h4 class="m-b-0" id="AfiliadosSMSTrabajadores">1000</h4>
                        </li>
                        <li></li>
                        <li>
                            <h5 class="text-muted m-t-20">Pensionados</h5>
                            <h4 class="m-b-0" id="AfiliadosSMSPensionados">965</h4>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card-box">
                <h4 class="text-dark header-title m-t-0 m-b-30">Teléfono</h4>

                <div class="widget-chart text-center">
                    <div id="grafCall">
                        <svg style="height:350px;width:100%"></svg>
                    </div>
                    <ul class="list-inline m-t-15">
                        <li>
                            <h5 class="text-muted m-t-20">Trabajadores</h5>
                            <h4 class="m-b-0" id="AfiliadosCallTrabajadores">523</h4>
                        </li>
                        <li></li>
                        <li>
                            <h5 class="text-muted m-t-20">Pensionados</h5>
                            <h4 class="m-b-0" id="AfiliadosCallPensionados">965</h4>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> <!-- container -->