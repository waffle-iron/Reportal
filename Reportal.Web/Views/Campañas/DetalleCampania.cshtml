
@{
    ViewBag.Title = "Detalle Campaña";
    Layout = "~/Views/Layout/_Principal.cshtml";
    ViewBag.ActiveMenu = "gestión";
    ViewBag.ActiveMenuRoot = "campañas";
}

@section css{

    <link href="~/assets/plugins/nvd3/build/nv.d3.min.css" rel="stylesheet" type="text/css" />

}

@section script{



    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

    <script src="~/assets/plugins/d3/d3.min.js"></script>
    <script src="~/assets/plugins/nvd3/build/nv.d3.min.js"></script>
    <script src="~/assets/pages/jquery.nvd3.init.js"></script>


    <script>
        $(document).ready(function () {
            //$.getJson({})
        });
    </script>

}

<div class="container">


    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">@Html.Raw(ViewBag.Campania.Nombre)</h4>
            <ol class="breadcrumb">
                <li><a href="#">Portal de Informacion</a></li>
                <li><a href="#">Campañas</a></li>
                <li class="active">@Html.Raw(ViewBag.Campania.Nombre)</li>
            </ol>
        </div>
    </div>


    <div class="row">

        <div class="col-lg-5">
            <div class="widget-bg-color-icon card-box fadeInDown animated">
                <div class="bg-icon bg-icon-info pull-left">
                    <i class="md md-contacts text-info"></i>
                </div>
                <div class="text-right">
                    <h3 class="text-dark"><b class="counter" id="totalAfiliados">0</b></h3>
                    <p class="text-muted">Total de Afiliados Contactados</p>
                </div>
                <div class="clearfix"></div>
            </div>

        </div>

        <div class="col-lg-6">
            <div class="card-box">
                <div class="widget-chart text-center">
                    <div id="chart2">
                        <svg style="height:350px;width:100%"></svg>
                    </div>
                    <ul class="list-inline m-t-15">
                        <li>
                            <h5 class="text-muted m-t-20">Privados</h5>
                            <h4 id="AfiliadosCorreoPrivados" class="m-b-0">245.191</h4>
                        </li>
                        <li>
                            <h5 class="text-muted m-t-20">Publicos</h5>
                            <h4 id="AfiliadosCorreoPublicos" class="m-b-0">37.606</h4>
                        </li>
                        <li>
                            <h5 class="text-muted m-t-20">Pensionados</h5>
                            <h4 id="AfiliadosCorreoPensionados" class="m-b-0">21.857</h4>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-lg-4">
            <div class="widget-bg-color-icon card-box fadeInDown animated">
                <div class="bg-icon bg-icon-info pull-left">
                    <i class="md md-contacts text-info"></i>
                </div>
                <div class="text-right">
                    <h3 class="text-dark"><b class="counter" id="totalAfiliados">0</b></h3>
                    <p class="text-muted">Afiliados Publicos Contactados</p>
                </div>
                <div class="clearfix"></div>
            </div>

        </div>


        <div class="col-lg-8">
            <div class="card-box">
               

                    <p class="font-600">SMS <span class="text-primary pull-right">80%</span></p>
                    <div class="progress m-b-30">
                        <div style="width: 80%; visibility: visible; animation-name: animationProgress;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="80" role="progressbar" class="progress-bar progress-bar-primary progress-animated wow animated animated">
                        </div><!-- /.progress-bar .progress-bar-danger -->
                    </div><!-- /.progress .no-rounded -->

                    <p class="font-600">Email <span class="text-pink pull-right">50%</span></p>
                    <div class="progress m-b-30">
                        <div style="width: 50%; visibility: visible; animation-name: animationProgress;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="50" role="progressbar" class="progress-bar progress-bar-pink progress-animated wow animated animated">
                        </div><!-- /.progress-bar .progress-bar-pink -->
                    </div><!-- /.progress .no-rounded -->

                    <p class="font-600">Llamada <span class="text-success pull-right">40%</span></p>
                    <div class="progress m-b-30">
                        <div style="width: 40%; visibility: visible; animation-name: animationProgress;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="40" role="progressbar" class="progress-bar progress-bar-success progress-animated wow animated animated">
                        </div><!-- /.progress-bar .progress-bar-success -->
                    </div><!-- /.progress .no-rounded -->


            </div>
        </div>

    </div>


</div>
